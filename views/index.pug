doctype html
head
  script(src='/index.js')

  meta(charset='utf-8')
  title 412 Project
  style(type='text/css').
    body {
    width: 90%;
    margin: 0 auto;
    background-color: rgb(255,255,255);
    }
    #content {
    overflow: auto;
    }
    #nav, #feature, #footer {
    margin: 1%;
    }
    .column1, .column2, .column3{
    line-height: 0.8;
    border-style: none;
    text-align: center;
    float: left;
    margin: 0 1.5%;
    width: 30%;
    }
    .column3 {
    margin-right: 0%;
    }
    li{
    display: inline;
    padding: 0.5em;
    }
    #nav, #footer {
    border-style: none;
    justify-content: center;
    text-align: center;
    background-color: #e6e6e6;
    padding: 0.5em 0;
    }
    #feature, .article {
    line-height: 0.8;
    border-style: none;
    height: 20em;
    margin-bottom: 1em;
    background-color: #e6e6e6;
    }
    h1{
    font-family: Times, Times New Roman, serif;
    justify-content: center;
    text-align: center;
    letter-spacing: 0.3em;
    color: rgb(0,0,0);
    font-size: 12px;}
    .credits {
    font-family: "Courier New", Courier, monospace;
    font-size: 12px;
    }
    a:hover{
    color: purple;
    }
    #search {
    float: right;
    }
    #center {
    text-align: center;
    }
  // font-weight: bold word-spacing: lem
#header
  img(src='https://raw.githubusercontent.com/DHoang14/cse412project/main/views/CellItToMe.png' align='middle' style='width:1300px; height:200px;')
  h1 Need a phone? Compare phone prices and plans amongst different stores, before you buy.

#nav
  ul
    li
      a(href='/home') Home
    li 
        a(href='/watch') Watch List
    li 
        a(href='/dataplans') Carrier Data Plans
    li
        #search
            form(action="/search", method="get")
                div(class="input")
                    input#searchBar(type='text' name='searchBar' placeholder='Search Phones...')
                    button#bn(type="submit") Go

#content
  #feature
    
    //p  testing carrier id is #{id} 
    //p  testing carrier name is #{name}
    //p  testing is #{buttonclick}
    p
    
    table(style='width:100%', border='1')
      tr
       
        th name
      for row in carrier
        tr
            td= row

  
