    }
    #articleList {
    padding-inline-start: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    grid-gap: 20px;
    }
    .article {
    list-style-type: none;
    line-height: 0.8;
    border-style: none;
    margin-bottom: 1em;
    background-color: #e6e6e6;
    border-radius: 3px;
    padding: 10px 20px;
    display: grid;
    grid-template: 50px 50px/auto auto auto;
    text-align: left;
    }
    h1{
    font-family: Times, Times New Roman, serif;
    justify-content: center;
    text-align: center;
    letter-spacing: 0.3em;
