    //page specific css
  // font-weight: bold word-spacing: lem
#header
  img(src='https://raw.githubusercontent.com/DHoang14/cse412project/main/views/CellItToMe.png' align='middle' style='width:1300px; height:200px; padding-left: 40px;')
  h1 Need a phone? Compare phone prices and plans amongst different stores, before you buy.

#nav
  ul
    li
      a(href='/home') Home
    li 
        a(href='/watch') Watch List
    li 
        a(href='/dataplans') Carrier Data Plans
    li
        #search
            form(action="/search", method="get")
                div(class="input")
                    input#searchBar(type='text' name='searchBar' placeholder='Search Phones...')
                    button#bn(type="submit") Go

#content
  #info

    -var model;
    -let cservices = [];
    -let stores = [];
    
    p <font size="+1"> Phone specifications: </font>
   
    -var index = 0;
    for row in phoneInfo
      ul
      if (index == 0)
        -let source = row.trim();
        img(src=source)
      else if (index == 1)
        li Model:
        -model = row;
      else if (index == 2)
        li Brand:
      else if (index == 3)
        li OS:
      else if (index == 4)
        li Battery:
      else if (index == 5)
        li Screen Resolution:
      else if (index == 6)
        li Dimensions:
      else if (index == 7)
        li Audio Jack:
      if (index != 0)
        li=row
        if (row == null)
            li N/A
      
        
      -index = index + 1;
    br
    br
    p Available Colors:
   
    if (colors.length)
        li |
        for row in colors
           li=row
           li |
    else 
        p None recorded
    br 
    br
    p Carriers Available:
    
    if (carriers.length)
        li |
        for row in carriers
            li=row
            li |
            -cservices.push(row);
    else
        p None available
        -cservices.push('None');

    -index = 0
    br
    br
    p Sold At:
    if (storeInfo.length)
        -var currentStore;
        for row in storeInfo
            if (index == 0)
                ul
                li Website Name:
                -stores.push(row);
                -currentStore=row;
            else if (index == 1)
                ul
                li Storage Space Offered:
            else if (index == 2)
                ul
                li Price:
                li $
               
            li=row
            if (index == 2)
                br
                br
                -index = -1;

                -for(var i = 0; i < plans.length; i++)
                    if(plans[i][0] == currentStore && plans[i].length > 1)
                        p Related Store Plans:
                        -let planElement = 0;

                        table(style='width:90%', border='0')
                            tr
                                th Store Plan
                                th Duration
                                th Payment Period
                                th Price
                            -for (var j = 1; j < plans[i].length; j++)
                                 if (planElement == 4)
                                    -planElement = 0;
                                 if (planElement == 0)
                                    tr
                                 td=plans[i][j]
                            
                                 -planElement = planElement+1;

                               
            -index = index + 1;
    else
        p No Recorded Stores
        -stores.push('None');
    



    br
    form(action='/add' method="post")
        p Add to Watch List:
        div(class="input")
                input#rowvalue(type='text' name='model' value=model)
                input#rowvalue(type='text' name='phone' value=JSON.stringify(phoneInfo))
                input#rowvalue(type='text' name='colors' value=JSON.stringify(colors))
                input#rowvalue(type='text' name='carriers' value=JSON.stringify(carriers))
                input#rowvalue(type='text' name='store' value=JSON.stringify(storeInfo))
                input#rowvalue(type='text' name='plan' value=JSON.stringify(plans))

        label Carrier:
        select(name='cservices')
            each service in cservices
                option=service
        br
        br
        label Store:
        select(name='stores')
            each store in stores
                option=store
        br
        br
        input(type='submit' value='Submit')
       
        p #{success}
    br  

   


