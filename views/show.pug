    //page specific css
  // font-weight: bold word-spacing: lem
#header
  img(src='https://raw.githubusercontent.com/DHoang14/cse412project/main/views/CellItToMe.png' align='middle' style='width:1300px; height:200px;')
  h1 Need a phone? Compare phone prices and plans amongst different stores, before you buy.

#nav
  ul
    li
      a(href='/home') Home
    li 
        a(href='/watch') Watch List
    li 
        a(href='/dataplans') Carrier Data Plans
    li
        #search
            form(action="/search", method="get")
                div(class="input")
                    input#searchBar(type='text' name='searchBar' placeholder='Search Phones...')
                    button#bn(type="submit") Go

#content
  #info

    -var model;
    -let cservices = [];
    -let stores = [];
    
    p Phone specifications:
   
    -var index = 0;
    for row in phoneInfo
      ul
      if (index == 0) 
        li Model:
        -model = row;
      else if (index == 1)
        li Brand:
      else if (index == 2)
        li OS:
      else if (index == 3)
        li Battery Life:
      else if (index == 4)
        li Screen Resolution:
      else if (index == 5)
        li Dimensions:
      li=row
      -index = index + 1;
    br
    br
    p Available Colors:
    li |
    if (colors.length)
        for row in colors
           li=row
           li |
    else 
        p None recorded
    br 
    br
    p Carriers Available:
    li |
    if (carriers.length)
        for row in carriers
            li=row
            li |
            -cservices.push(row);
    else
        p None available
        -cservices.push('None');

    -index = 0
    br
    br
    p Sold At:
    if (storeInfo.length)
        for row in storeInfo
            if (index == 0)
                ul
                li Website Name:
                -stores.push(row);
            else if (index == 1)
                ul
                li Storage Space Offered:
            else if (index == 2)
                ul
                li Price:
                li $
               
            li=row
            if (index == 2)
                br
                br
                -index = -1;
            -index = index + 1;
    else
        p No Recorded Stores
        -stores.push('None');
    
    br
    form(action='/add' method="post")
        p Add to Watch List:
        div(class="input")
                input#rowvalue(type='text' name='model' value=model)
        label Carrier:
        select(name='cservices')
            each service in cservices
                option=service
        label Store:
        select(name='stores')
            each store in stores
                option=store
        input(type='submit', value='Submit')
    br  


