doctype html
head
  script(src='/index.js')

  meta(charset='utf-8')
  title 412 Project
  style(type='text/css').
    body {
    width: 90%;
    margin: 0 auto;
    background-color: rgb(255,255,255);
    }
    #content {
    overflow: auto;
    }
    #nav, #feature, #footer {
    margin: 1%;
    }
    .column1, .column2, .column3{
    line-height: 0.8;
    border-style: none;
    text-align: center;
    float: left;
    margin: 0 1.5%;
    width: 30%;
    }
    .column3 {
    margin-right: 0%;
    }
    li{
    display: inline;
    padding: 0.5em;
    }
    #nav{
    border-style: none;
    justify-content: center;
    text-align: center;
    background-color: #e6e6e6;
    padding: 0.5em 0;
    padding-left: 8.5em;
    }
    #footer {
    border-style: none;
    justify-content: center;
    text-align: center;
    background-color: #e6e6e6;
    padding: 0.5em 0;
    }
    #feature, .article {
    line-height: 0.8;
    border-style: none;
    height: 20em;
    margin-bottom: 1em;
    background-color: #e6e6e6;
    }
    h1{
    font-family: Times, Times New Roman, serif;
    justify-content: center;
    text-align: center;
    letter-spacing: 0.3em;
    color: rgb(0,0,0);
    font-size: 12px;}
    .credits {
    font-family: "Courier New", Courier, monospace;
    font-size: 12px;
    }
    a{
    color: gray;
    text-decoration: none;
    padding-left: 15px;
    }
    a:hover{
    color: #6897bb !important;
    text-decoration: underline;
    }
    a:visited{
    color: black;
    text-decoration: none;
    }
    #search {
    float: right;
    padding-right: 10px;
    }
    
    #center {
    text-align: center;
    }
   
    #rowvalue {
    display: none;
    }
    #info {
    line-height: 0.8;
    border-style: none;
    height: auto;
    margin-bottom: 1em;
    background-color: #efefef;
    }
